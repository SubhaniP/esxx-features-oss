{
    "name": "esxx-features-oss",
    "description": "My amazing LWC app",
    "version": "0.0.1",
    "author": "Alba Rivas",
    "bugs": "https://github.com/Alba Rivas/esxx-features-oss/issues",
    "dependencies": {
        "@salesforce-ux/design-system": "^2.13.7",
        "lightning-base-components": "^1.10.6-alpha"
    },
    "devDependencies": {
        "eslint": "^7.14.0",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.2",
        "lwc-services": "^2.3.2",
        "prettier": "^2.2.1"
    },
    "engines": {
        "node": ">=10.13.0",
        "npm": ">=6.4.1",
        "yarn": ">=1.9.4"
    },
    "homepage": "https://github.com/Alba Rivas/esxx-features-oss",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [
        "lwc"
    ],
    "license": "MIT",
    "lint-staged": {
        "**/*.{css,html,js,json,md,ts,yaml,yml}": [
            "prettier --write"
        ],
        "./src/**/*.js": [
            "eslint"
        ]
    },
    "repository": "Alba Rivas/esxx-features-oss",
    "scripts": {
        "build": "lwc-services build -m production",
        "build:development": "lwc-services build",
        "lint": "eslint ./src/**/*.js",
        "prettier": "prettier --write \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "prettier:verify": "prettier --list-different \"**/*.{css,html,js,json,md,ts,yaml,yml}\"",
        "serve": "node index.js",
        "test:unit": "lwc-services test:unit",
        "test:unit:coverage": "lwc-services test:unit --coverage",
        "test:unit:debug": "lwc-services test:unit --debug",
        "test:unit:watch": "lwc-services test:unit --watch",
        "watch": "lwc-services watch"
    }
}
